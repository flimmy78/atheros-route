#!/bin/sh
BAIDU=61.135.169.125
QQ=182.254.18.159

while true
do
ping  $BAIDU test

if [ $? -eq 1 ];then
        cfg -a PING_BD=NO
        cfg -a INTERNET_ON=off
else
        cfg -a PING_BD=OK
        cfg -a INTERNET_ON=on

fi


ping  $QQ test
if [ $? -eq 1 ];then
        cfg -a PING_QQ=NO
else
        cfg -a PING_QQ=OK
fi


cfg -c

sleep 5

done
